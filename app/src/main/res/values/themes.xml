<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoftSchool" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlActivated">@color/color_primary</item>
        <!-- Status bar color. -->
        <item name="colorPrimaryDark">@color/main_blue</item>
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/selection_menu</item>

        <item name="android:textColorPrimary">@android:color/white</item>

        <item name="expenses_pie_color">@color/main_blue</item>
        <item name="incomes_pie_color">@color/all_green_elements</item>


    </style>
</resources>